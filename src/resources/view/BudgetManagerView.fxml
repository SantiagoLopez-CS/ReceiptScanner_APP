<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="rootVBox"
      fx:controller="papertrail.controller.BudgetManagerController"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
    </padding>

    <Label text="Budget Manager" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- New input section with validation messages -->
    <VBox spacing="10">
        <!-- First Row -->
        <HBox spacing="5">
            <!-- Title Input -->
            <VBox spacing="2">
                <TextField fx:id="titleField" promptText="Title">
                    <tooltip>
                        <Tooltip text="Enter a name for your budget(e.g., Groceries)" />
                    </tooltip>
                </TextField>
                <Label fx:id="titleErrorLabel" text="Title is required." textFill="red" visible="false" />
            </VBox>
            <!-- Category Input -->
            <VBox spacing="2">
                <ComboBox fx:id="categoryComboBox" promptText="Category">
                    <tooltip>
                        <Tooltip text="Select a category that fits this budget" />
                    </tooltip>
                </ComboBox>
                <Label fx:id="categoryErrorLabel" text="Category is required." textFill="red" visible="false" />
            </VBox>
        </HBox>
        <!-- Second Row -->
        <HBox spacing="5">
            <!-- Limit Input -->
            <VBox spacing="2">
                <TextField fx:id="limitField" promptText="Limit">
                    <tooltip>
                        <Tooltip text="Set a maximum spending amount (e.g., 200.00)" />
                    </tooltip>
                </TextField>
                <Label fx:id="limitErrorLabel" text="Cash limit required." textFill="red" visible="false" />
            </VBox>
            <!-- Period Input -->
            <VBox spacing="2">
                <ComboBox fx:id="periodComboBox" promptText="Period">
                    <tooltip>
                        <Tooltip text="Choose how often this budget resets (e.g., Monthly)" />
                    </tooltip>
                </ComboBox>
                <Label fx:id="periodErrorLabel" text="Select a Time Period." textFill="red" visible="false" />
            </VBox>
        </HBox>
    </VBox>

    <Button fx:id="addBudgetButton" text="Add Budget" onAction="#handleAddBudget">
        <tooltip>
            <Tooltip text="Save a new budget using the fields above" />
        </tooltip>
    </Button>

    <Separator />

    <!-- ðŸ‘‡ Filter/search row -->
    <HBox spacing="10">
        <TextField fx:id="searchTitleField" promptText="Search by Title">
            <tooltip>
                <Tooltip text="Type to filter budgets by their title" />
            </tooltip>
        </TextField>
        <ComboBox fx:id="filterCategoryBox" promptText="Filter by Category">
            <tooltip>
                <Tooltip text="Select a category to narrow down the budget list" />
            </tooltip>
        </ComboBox>
        <Button fx:id="clearFiltersBtn" text="Clear Filters" onAction="#handleClearFilters">
            <tooltip>
                <Tooltip text="Reset all budget search and filter options" />
            </tooltip>
        </Button>
    </HBox>

    <ScrollPane fitToWidth="true">
        <HBox fx:id="budgetContentHBox" spacing="30">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15" />
            </padding>
            <VBox spacing="10">
                <Label text="Budget's List" />
                <VBox fx:id="mainBudgetListVBox" spacing="5" />
            </VBox>
        </HBox>
    </ScrollPane>

    <Button text="â¬… Back to Main Menu" onAction="#handleBackToMenu">
        <tooltip>
            <Tooltip text="Return to the main PaperTrail menu" />
        </tooltip>
    </Button>

</VBox>
