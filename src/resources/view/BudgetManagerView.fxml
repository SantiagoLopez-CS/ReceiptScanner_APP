<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="rootVBox"
      fx:controller="papertrail.controller.BudgetManagerController"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="@/papertrail/style/budget-manager.css"
      styleClass="budget-view-root"
      spacing="10" minWidth="600" minHeight="600">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
    </padding>

    <!-- Title -->
    <Label text="Budget Manager" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- âž• Add Section -->
    <Label text="âž• Add a New Budget" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

    <!-- New input section with validation messages -->
    <VBox spacing="10">
        <!-- First Row -->
        <HBox spacing="5">
            <!-- Title Input -->
            <VBox spacing="2">
                <TextField fx:id="titleField" promptText="Title">
                    <tooltip>
                        <Tooltip text="Enter a name for your budget(e.g., Groceries)" />
                    </tooltip>
                </TextField>
                <Label fx:id="titleErrorLabel" text="Title is required." textFill="red" visible="false" styleClass="error-label"/>
            </VBox>
            <!-- Category Input -->
            <VBox spacing="2">
                <ComboBox fx:id="categoryComboBox" promptText="Category">
                    <tooltip>
                        <Tooltip text="Select a category that fits this budget" />
                    </tooltip>
                </ComboBox>
                <Label fx:id="categoryErrorLabel" text="Category is required." textFill="red" visible="false" styleClass="error-label"/>
            </VBox>
        </HBox>
        <!-- Second Row -->
        <HBox spacing="5">
            <!-- Limit Input -->
            <VBox spacing="2">
                <TextField fx:id="limitField" promptText="Limit">
                    <tooltip>
                        <Tooltip text="Set a maximum spending amount (e.g., 200.00)" />
                    </tooltip>
                </TextField>
                <Label fx:id="limitErrorLabel" text="Cash limit required." textFill="red" visible="false" styleClass="error-label"/>
            </VBox>
            <!-- Period Input -->
            <VBox spacing="2">
                <ComboBox fx:id="periodComboBox" promptText="Period">
                    <tooltip>
                        <Tooltip text="Choose how often this budget resets (e.g., Monthly)" />
                    </tooltip>
                </ComboBox>
                <Label fx:id="periodErrorLabel" text="Select a Time Period." textFill="red" visible="false" styleClass="error-label"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- Add Button -->
    <Button fx:id="addBudgetButton" text="Add Budget" onAction="#handleAddBudget" styleClass="add-button">
        <tooltip>
            <Tooltip text="Save a new budget using the fields above" />
        </tooltip>
    </Button>

    <Separator />

    <!-- Search/Filter Section -->
    <Label text="ðŸ” Search / Filter Budgets" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

    <!-- ðŸ‘‡ Filter/search row -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <!-- Title Search Option -->
        <TextField fx:id="searchTitleField" promptText="Search by Title">
            <tooltip>
                <Tooltip text="Type to filter budgets by their title" />
            </tooltip>
        </TextField>
        <!-- Category Filter Option -->
        <ComboBox fx:id="filterCategoryBox" promptText="Filter by Category">
            <tooltip>
                <Tooltip text="Select a category to narrow down the budget list" />
            </tooltip>
        </ComboBox>
        <!-- Sort List Options -->
        <ComboBox fx:id="sortComboBox" promptText="Sort By">
            <tooltip>
                <Tooltip text="Sort budgets by title, limit, or reset period" />
            </tooltip>
        </ComboBox>
        <Button fx:id="clearFiltersBtn" text="Clear Filters" onAction="#handleClearFilters" styleClass="clear-button">
            <tooltip>
                <Tooltip text="Reset all budget search and filter options" />
            </tooltip>
        </Button>
    </HBox>

    <!-- Budget List -->
    <Label text="ðŸ“‹ Budget List" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

    <ScrollPane fitToWidth="true" styleClass="scroll-section">
        <HBox fx:id="budgetContentHBox" spacing="30">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15" />
            </padding>
            <VBox spacing="10">
                <Label text="Budget's List" />
                <VBox fx:id="mainBudgetListVBox" spacing="5" />
            </VBox>
            <Label fx:id="emptyBudgetLabel" text="No budgets available." visible="false" styleClass="empty-label" />
        </HBox>
    </ScrollPane>

    <!-- Back Button -->
    <Button text="â¬… Back to Main Menu" onAction="#handleBackToMenu" styleClass="back-button">
        <tooltip>
            <Tooltip text="Return to the main PaperTrail menu" />
        </tooltip>
    </Button>

</VBox>
