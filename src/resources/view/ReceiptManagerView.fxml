<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:controller="papertrail.controller.ReceiptManagerController"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
    </padding>

    <Label text="Receipt Manager" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Row 1: Store name + Category -->
    <HBox spacing="10">
        <!-- Store Name -->
        <VBox spacing="2">
            <TextField fx:id="storeNameField" promptText="Store Name" />
            <Label fx:id="storeNameErrorLabel" text="Store Name required." textFill="red" visible="false" />
        </VBox>
        <!-- Category -->
        <VBox spacing="2">
            <ComboBox fx:id="categoryComboBox" promptText="Category" />
            <Label fx:id="categoryErrorLabel" text="Please select a category." textFill="red" visible="false" />
        </VBox>
    </HBox>
    <!-- Row 2: Date + Amount -->
    <HBox spacing="10">
        <!-- Date Picker -->
        <VBox spacing="2">
            <DatePicker fx:id="dayOfPurchase" promptText="Day of Purchase" />
            <Label fx:id="dateErrorLabel" text="Date is required." textFill="red" visible="false" />
        </VBox>
        <!-- Spent Amount -->
        <VBox spacing="2">
            <TextField fx:id="spentField" promptText="Amount Spent" />
            <Label fx:id="spentErrorLabel" text="Enter a valid amount." textFill="red" visible="false" />
        </VBox>
    </HBox>
    <!-- Add Button -->
    <Button text="Add Receipt" onAction="#handleAddReceipt" />

    <Separator />

    <!-- Filter Section -->
    <Label text="Filter Receipts" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <HBox spacing="10">
        <TextField fx:id="filterStoreField" promptText="Search by Store" />
        <ComboBox fx:id="filterCategoryBox" promptText="Filter by Category" />
    </HBox>
    <HBox spacing="10">
        <DatePicker fx:id="filterDatePicker" promptText="Filter by Date" />
        <Button text="Clear Filters" onAction="#handleClearFilters" />
    </HBox>

    <!-- Scrollable receipt list -->
    <ScrollPane fitToWidth="true">
        <HBox>
            <padding>
                <Insets top="15" right="15" bottom="15" left="15" />
            </padding>
            <VBox fx:id="receiptsListVBox" spacing="5" />
        </HBox>
    </ScrollPane>

    <!-- Back Button -->
    <Button text="â¬… Back to Main Menu" onAction="#handleBackToMenu" />
</VBox>
